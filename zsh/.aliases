# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

alias up="brew update && brew upgrade && brew cleanup && omz update && git -C ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/powerlevel10k pull"
alias vi="nvim"
alias vim="nvim"
alias cat="bat"
alias h="history | fzf"
alias l="exa --long --header --git --icons --group-directories-first"
alias la="exa --long --header --git --icons --group-directories-first --all"

# Include custom aliases
if [[ -f ~/.aliases.local ]]; then
  source ~/.aliases.local
fi

